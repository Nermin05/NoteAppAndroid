<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_date"
    android:padding="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/gun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tarix"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="15dp"
        android:text="Tue"

        />
    <TextView
        android:id="@+id/tarix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
app:layout_constraintBottom_toTopOf="@id/gun"
        app:layout_constraintTop_toBottomOf="@+id/gun"
        android:textSize="20dp"
        android:text="23"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/ay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarix"
        android:textSize="15dp"
        android:text="Apr"

        />



</androidx.constraintlayout.widget.ConstraintLayout>